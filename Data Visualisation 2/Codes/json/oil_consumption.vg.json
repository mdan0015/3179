{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 550,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/Data%20Visualisation%202/Codes/data/oil-consumption-by-country.csv"
    },
    "transform": [ 
    {"filter": "datum.Year == Year_selection"}
    ],
    "params": [
      {
        "name": "Year_selection",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 1965,
          "max": 2023,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "GDP_per_capita",
        "type": "quantitative",
        "title": "GDP per capita (USD)",
        "scale": {"domain": [0, 90000]}
      },
      "y": {
        "field": "Oil_consumption_TWh",
        "type": "quantitative",
        "title": "Oil consumption (TWh)",
        "scale": {"domain": [0, 12000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [0, 150000000, 330000000, 700000000, 1400000000],
              "range": [50, 100, 200, 500, 750, 1200]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Country",
            "type": "nominal",
            "scale": {
              "domain": [
                "China",
                "India",
                "Japan",
                "Russia",
                "United States"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#2ca25f",
                "#377eb8"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Year", "type": "ordinal"},
            {"field": "Country", "type": "nominal"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "GDP_per_capita", "type": "quantitative", "format": ",", "title": "GDP per capita (USD)"},
            {"field": "Oil_consumption_TWh", "type": "quantitative", "format": ",", "title": "Oil consumption (TWh)"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic",
          "fontWeight": "bold"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "#dd1c77"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Russia' || datum['Country'] == 'India' || datum['Country'] == 'Japan' || datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Confirmed", "type": "quantitative", "format": ","},
            {"field": "Active", "type": "quantitative", "format": ","},
            {"field": "Deaths", "type": "quantitative", "format": ","},
            {"field": "Recovered", "type": "quantitative", "format": ","},
            {
              "field": "Cases per 10,000 Population",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ]
  }