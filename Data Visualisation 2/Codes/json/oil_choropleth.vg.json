{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {
    "type": "equalEarth", 
    "scale": {"expr": "zoom_level"},
    "center": {"expr": "center_to"}
    },
  "params": [
    {
      "name": "zoom_level",
      "value": 150,
      "bind": {
        "input": "range",
        "min": 150,
        "max": 700,
        "step": 10,
        "name": "Zoom:  "
      }
    },
    {
        "name": "center_to",
        "value": [0, 0],
        "bind": {
            "input": "select",
            "options": [
                [0, 0],
                [51.183884, 25.354826],
                [-66.589729, 6.423750],
                [101.975769, -4.210484],
                [105.318756, 61.524010]
            ],
            "labels": ["None", "Middle-east", "South-America", "Malaysia", "Easten-Europe"],
            "name": "Map Center:  "
        }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/data/oil-proved-reserves.csv"
            },
            "key": "Country",
            "fields": ["Begin", "End", "Absolute_Change", "Population"]
          }
        },
        {"calculate": "datum.End / datum.Population", "as": "Oil Reserve (tonnes) Per Capita"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Oil Reserve (tonnes) Per Capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 10, 100, 200, 400, 600, 1000, 1400],
            "range": ["#fff5eb", "#fee6ce", "#fdd0a2", "#fdae6b", "#fd8d3c", "#f16913", "#d94801", "#8c2d04"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Oil Reserve (tonnes) Per Capita", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/data/oil-proved-reserves.csv"
            },
            "key": "Country",
            "fields": ["End"]
          }
        },
        {"filter": "datum.properties.NAME == 'Canada'"},
        {"calculate": "datum.End", "as": "Total Reserves (tonnes)"},
        {
          "calculate": "split('Canada has the third highest \\ntotal oil reserves', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "-180", "as": "longitude"},
        {"calculate": "36", "as": "latitude"}
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "#d94801"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"},
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Total Reserves (tonnes)", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Canada'"},
        {"calculate": "-110", "as": "longitude"},
        {"calculate": "60", "as": "latitude"},
        {"calculate": "-180", "as": "longitude2"},
        {"calculate": "40", "as": "latitude2"},
        {"calculate": "datum.properties.NAME", "as": "annotationText"}
      ],
      "mark": {"type": "rule", "stroke": "#d94801", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/data/oil-proved-reserves.csv"
            },
            "key": "Country",
            "fields": ["End"]
          }
        },
        {"filter": "datum.properties.NAME == 'Venezuela'"},
        {"calculate": "datum.End", "as": "Total Reserves (tonnes)"},
        {
          "calculate": "split('Venezuela has the highest \\ntotal oil reserves', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "-135", "as": "longitude"},
        {"calculate": "10", "as": "latitude"}
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "#8c2d04", "fontWeight": "bold"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"},
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Total Reserves (tonnes)", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Venezuela'"},
        {"calculate": "-66", "as": "longitude"},
        {"calculate": "6", "as": "latitude"},
        {"calculate": "-100", "as": "longitude2"},
        {"calculate": "8", "as": "latitude2"},
        {"calculate": "datum.properties.NAME", "as": "annotationText"}
      ],
      "mark": {"type": "rule", "stroke": "#8c2d04", "strokeWidth": 2, "fontWeight": "bold", "align": "right"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/data/oil-proved-reserves.csv"
            },
            "key": "Country",
            "fields": ["End"]
          }
        },
        {"filter": "datum.properties.NAME == 'Saudi Arabia'"},
        {"calculate": "datum.End", "as": "Total Reserves (tonnes)"},
        {
          "calculate": "split('Saudi Arabia has the second\\n highest total oil reserves', '\\n')",
          "as": "annotationText"
        },
        {"calculate": "60", "as": "longitude"},
        {"calculate": "-40", "as": "latitude"}
      ],
      "mark": {"type": "text", "dx": 0, "dy": 0, "color": "#8c2d04"},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "annotationText"},
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Total Reserves (tonnes)", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mdan0015/3179/refs/heads/main/FIT3179%20Week%209%20Homework/json/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"filter": "datum.properties.NAME == 'Saudi Arabia'"},
        {"calculate": "40", "as": "longitude"},
        {"calculate": "25", "as": "latitude"},
        {"calculate": "60", "as": "longitude2"},
        {"calculate": "-35", "as": "latitude2"},
        {"calculate": "datum.properties.NAME", "as": "annotationText"}
      ],
      "mark": {"type": "rule", "stroke": "#8c2d04", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "longitude2": {"field": "longitude2"},
        "latitude2": {"field": "latitude2"}
      }
    }
  ]
}